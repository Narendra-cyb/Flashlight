<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/flashlightImageView"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:animateLayoutChanges="true"
        android:scaleType="centerCrop"
        android:src="@drawable/flashlight_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flashlightButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00A33B3B"
        android:fontFamily="monospace"
        android:textSize="15sp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/flashlightImageView"
        app:layout_constraintEnd_toEndOf="@+id/flashlightImageView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/flashlightImageView"
        app:layout_constraintTop_toTopOf="@+id/flashlightImageView"
        app:layout_constraintVertical_bias="0.723" />

</androidx.constraintlayout.widget.ConstraintLayout>